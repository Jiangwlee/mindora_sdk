# Mindora SDK 基础设施配置示例
# 复制此文件为 .env 并根据需要修改配置

# 全局配置
MINDORA_ENV=development
MINDORA_LOG_LEVEL=INFO
MINDORA_DATA_ROOT=/home/bruce/.mindora/infrastructure

# 数据库配置
POSTGRES_DB=mindora
POSTGRES_USER=mindora_user
POSTGRES_PASSWORD=mindora_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# MinIO配置
MINIO_ROOT_USER=mindora_admin
MINIO_ROOT_PASSWORD=mindora_admin_password
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# RabbitMQ配置
RABBITMQ_DEFAULT_USER=mindora_user
RABBITMQ_DEFAULT_PASS=mindora_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Elasticsearch配置
ELASTIC_PASSWORD=elastic_password
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Qdrant配置
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Consul配置
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_DNS_PORT=8600

# Prometheus配置
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090

# Grafana配置
GRAFANA_ADMIN_PASSWORD=grafana_admin
GRAFANA_HOST=grafana
GRAFANA_PORT=3000

# Kibana配置
KIBANA_HOST=kibana
KIBANA_PORT=5601

# 网络配置
MINDORA_NETWORK=mindora_network